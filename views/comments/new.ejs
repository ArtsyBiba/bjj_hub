<%- include('../partials/header')%>

<div class='row justify-content-center'>
	<div class='col-md-12 text-center mb-2'>
		<h2>
			Add New Comment to <%= dojo.name %>
		</h2>
	</div>
	<div class='col-sm-8 col-md-6 col-lg-5'>
		<form action='/dojos/<%= dojo._id %>/comments' method='POST'>
			<div class='form-group'>
				<input class='form-control' type='text' name='comment[text]' placeholder='text'>
			</div>
			<div class='form-group'>
				<button class='btn btn-large btn-primary btn-block'>
					Submit!
				</button>
			</div>
		</form>		
		<a href='/dojos'>Go Back</a>
	</div>
</div>

<%- include('../partials/footer')%>