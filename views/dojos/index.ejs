<%- include("../partials/header")%>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to BJJ Hub</h1>
			<p>
				Find a friendly place to roll, wherever you are in the world
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/dojos/new">Add New Dojo</a>	
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% dojos.forEach(function(dojo){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= dojo.image %>">
					<div class="caption"><h4><%= dojo.name %></h4></div>
					<p>
						<a href="/dojos/<%= dojo._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>  
		<% }); %>	
	</div>

</div>

<%- include("../partials/footer")%>