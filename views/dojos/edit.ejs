<%- include("../partials/header")%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Edit <%= dojo.name %>
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/dojos/<%= dojo._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="dojo[name]" value="<%= dojo.name %>">
				</div>
					<div class="form-group">
					<input class="form-control" type="text" name="dojo[fee]" value="<%= dojo.fee %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="dojo[image]" value="<%= dojo.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="dojo[description]" value="<%= dojo.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-large btn-primary btn-block">
						Submit!
					</button>
				</div>
			</form>		
			<a href="/dojos">Go Back</a>
		</div>
			
	</div>
</div>

<%- include("../partials/footer")%>