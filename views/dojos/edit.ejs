<%- include("../partials/header")%>

<div class='row justify-content-center'>
	<div class='col-md-12 text-center mb-2'>
		<h1>
			Edit <%= dojo.name %>
		</h1>
	</div>
	<div class='col-sm-8 col-md-6 col-lg-5'>
		<form action="/dojos/<%= dojo._id %>?_method=PUT" method="POST">
			<div class='form-group'>
				<label for='name'>Dojo Name</label>
				<input class='form-control' type='text' name='dojo[name]' value='<%= dojo.name %>'>
			</div>
			<div class='form-group'>
				<label for='fee'>Drop-In Fee</label>
				<input class='form-control' type='text' name='dojo[fee]' value='<%= dojo.fee %>'>
			</div>
			<div class='form-group'>
				<label for='image'>Image URL</label>
				<input class='form-control' type='text' name='dojo[image]' value='<%= dojo.image %>'>
			</div>
			<div class='form-group'>
				<label for='description'>Description</label>
				<input class='form-control' type='text' name='dojo[description]' value='<%= dojo.description %>'>
			</div>
			<div class='form-group'>
				<label for='location'>Location</label>
    			<input class='form-control' type='text' name='location' id='location' value='<%= dojo.location %>'>
			</div>
			<div class='form-group'>
				<button class='btn btn-large btn-primary btn-block'>
					Submit!
				</button>
			</div>
		</form>		
		<a href='/dojos'>Go Back</a>
	</div>
</div>

<%- include("../partials/footer")%>