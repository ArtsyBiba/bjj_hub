<%- include('../partials/header')%>

<div class='row justify-content-center'>
	<div class='col-md-12 text-center mb-2'>
		<h1>
			Add a New Dojo
		</h1>
	</div>
	<div class='col-sm-8 col-md-6 col-lg-5'>
		<form action='/dojos' method='POST'>
			<div class='form-group'>
				<label for='name'>Dojo Name</label>
				<input class='form-control' type='text' name='name' placeholder='name'>
			</div>
			<div class='form-group'>
				<label for='fee'>Drop-In Fee</label>
				<input class='form-control' type='text' name='fee' placeholder='drop-in fee'>
			</div>
			<div class='form-group'>
				<label for='image'>Image URL</label>
				<input class='form-control' type='text' name='image' placeholder='image url'>
			</div>
			<div class='form-group'>
				<label for='description'>Description</label>
				<input class='form-control' type='text' name='description' placeholder='description'>
			</div>
			<div class='form-group'>
				<label for='location'>Location</label>
    			<input class='form-control' type='text' name='location' id='location' placeholder='dojo address'>
			</div>
			<div class='form-group'>
				<button class='btn btn-large btn-primary btn-block'>
					Submit!
				</button>
			</div>
		</form>		
		<a href='/dojos'>Go Back</a>
	</div>
</div>

<%- include('../partials/footer')%>