<%- include('../partials/header')%>

<div class='row'>
	<div class='col-md-4 float-left'>
		<div id='map'></div>
	</div>
	<div class='col-md-7 float-right'>
		<div class="card mb-3">
			<img src="<%= dojo.image %>" class="card-img-top" alt="<%= dojo.name %>">
			<div class="card-body">
				<p class='float-right clearfix'>
					<%= dojo.fee %> drop-in
				</p>
				<h5 class='card-title'><%= dojo.name %></h5>
				<p>
					<em>Submitted by <%= dojo.author.username %>, <%= moment(dojo.createdAt).fromNow() %></em>
				</p>
				<hr>
				<p class='card-text'>
					<%= dojo.description %>
				</p>
				<% if(currentUser && dojo.author.id.equals(currentUser._id)){ %>
					<a class='btn btn-warning' href='/dojos/<%= dojo._id %>/edit'>Edit</a>
					<form class='delete-form' action='/dojos/<%= dojo._id %>?_method=DELETE' method='POST'>
						<button class='btn btn-danger'>
							Delete
						</button>
					</form>
				<% } %>
			</div>
		</div>
		
		<div class='card'>
			<div class='card-body'>
				<div>
					<div class='float-right'>
						<a class='btn btn-success' href='/dojos/<%= dojo._id %>/comments/new'>Leave a Comment</a>
					</div>
					<div class='text-left p-2'>
						<h5>Comments</h5>
					</div>
				</div>
				<hr>
				<div class='row'>
					<% dojo.comments.forEach(function(comment){ %>
					<div class='col-md-12 mb-2'>
						<div class='card'>
							<div class='card-body'>
								<div class='float-left'>
									<p class='card-title'><strong><%= comment.author.username %></strong></p>
									<p class='card-text'><%= comment.text %></p>
								</div>
								<div class='float-right'>
									<p><%= moment(comment.createdAt).fromNow() %></p>
								<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
									<div class='float-right'>
										<a class='btn btn-sm btn-warning' href='/dojos/<%= dojo._id %>/comments/<%= comment._id %>/edit'>Edit</a>
										<form class='delete-form' action='/dojos/<%= dojo._id %>/comments/<%= comment._id %>?_method=DELETE' method='POST'>
											<button class='btn btn-sm btn-danger'>Delete</button>
										</form>
									</div>
								<% } %>
								</div>	
							</div>
						</div>	
					</div>
					<% }) %>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
  function initMap() {
    var lat = <%= dojo.lat %>;
    var lng = <%= dojo.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= dojo.name %><br />
      <%= dojo.location %></strong>
      <p><%= dojo.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBo-aKdOxtABuyIQ8smD2W8Vw_ycrSo2KM&callback=initMap"></script>

<%- include('../partials/footer')%>